</head>
<body>
    <h1>Nachrichten-Verwaltung</h1>
    
    <h2>Neue Nachricht hinzufügen</h2>
    <form id="addNewsForm" enctype="multipart/form-data">
        <input type="file" id="image" name="image" accept="image/*" required>
        <input type="text" id="title" name="title" placeholder="Titel" required>
        <textarea id="excerpt" name="excerpt" placeholder="Kurzbeschreibung" required></textarea>
        <input type="date" id="date" name="date" required>
        <button type="submit">Nachricht hinzufügen</button>
    </form>

    <h2>Nachrichten</h2>
    <div id="newsList"></div>

    <div id="deleteConfirmModal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p>Sind Sie sicher, dass Sie diese Nachricht löschen möchten?</p>
            <button id="confirmDelete">Löschen</button>
            <button id="cancelDelete">Abbrechen</button>
        </div>
    </div>

    <script>
        function fetchNews() {
            fetch('/get_news')
                .then(response => response.json())
                .then(data => {
                    const newsListElement = document.getElementById('newsList');
                    newsListElement.innerHTML = '';
                    data.forEach(news => {
                        const newsCard = document.createElement('div');
                        newsCard.className = 'news-card';
                        newsCard.innerHTML = `
                            <div class="news-image">
                                <img src="/static/uploads/${news.image_filename}" alt="${news.title}">
                            </div>
                            <div class="news-content">
                                <div class="news-date">${news.date}</div>
                                <h3 class="news-title">${news.title}</h3>
                                <p class="news-excerpt">${news.excerpt}</p>
                                <a href="#" class="read-more">Weiterlesen</a>
                                <a href="#" class="delete-link" data-id="${news.id}">Löschen</a>
                            </div>
                        `;
                        newsListElement.appendChild(newsCard);
                    });
                    addDeleteListeners();
                });
        }

        function addDeleteListeners() {
            const deleteLinks = document.querySelectorAll('.delete-link');
            deleteLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const newsId = e.target.getAttribute('data-id');
                    showDeleteConfirmModal(newsId);
                });
            });
        }

        function showDeleteConfirmModal(newsId) {
            const modal = document.getElementById('deleteConfirmModal');
            const confirmButton = document.getElementById('confirmDelete');
            const cancelButton = document.getElementById('cancelDelete');
            const closeButton = document.querySelector('.close');

            modal.style.display = 'block';

            confirmButton.onclick = () => {
                deleteNews(newsId);
                modal.style.display = 'none';
            };

            cancelButton.onclick = closeButton.onclick = () => {
                modal.style.display = 'none';
            };

            window.onclick = (event) => {
                if (event.target == modal) {
                    modal.style.display = 'none';
                }
            };
        }

        function deleteNews(id) {
            fetch(`/delete_news/${id}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        fetchNews();
                    } else {
                        alert('Fehler beim Löschen der Nachricht');
                    }
                });
        }

        document.getElementById('addNewsForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            fetch('/add_news', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    e.target.reset();
                    fetchNews();
                } else {
                    alert('Fehler beim Hinzufügen der Nachricht');
                }
            });
        });

        fetchNews();
    </script>
</body>
</html>

